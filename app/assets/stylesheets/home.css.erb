.hero-image {
  height: 450px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  margin: 20px;
}

.lawyer-coverpic{
  background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%= asset_path 'lawyer_cover.png' %>);
}

.business-coverpic{
  background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%= asset_path 'start_up_cover.png' %>);
}

.avatar {
  vertical-align: middle;
  width:  180px;
  height: 180px;
  position: absolute;
  bottom: -75px;
  left: 32px;
  border: solid 1px #4A0000;
}
.hide{
  display: none;
}
.browse-btn{
  vertical-align: middle;
  position: absolute;
  bottom: -75px;
  left: 190px;
  cursor: pointer;
}
