.hero-image {
  height: 450px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  margin: 20px;
}

.lawyer-coverpic{
  background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%= asset_path 'lawyer_cover.png' %>);
}

.business-coverpic{
  background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%= asset_path 'start_up_cover.png' %>);
}

.avatar {
  vertical-align: middle;
  width:  180px;
  height: 180px;
  position: absolute;
  bottom: -75px;
  left: 32px;
  border: solid 1px lightgrey;
}
.hide{
  display: none;
}
.browse-btn{
  vertical-align: middle;
  position: absolute;
  bottom: -82px;
  left: 182px;
  cursor: pointer;
  font-size: 24px;
}

.browse-icon .text {
position:relative;
bottom: -20px;
left: -184px;
font-size: 15px;
visibility:hidden;
}

.browse-icon:hover .text {
visibility:visible;
}

.pretify-exp{
  color: #4A0000;
  font-size: 18px;
  font-family: sans-serif;
  font-weight: bold;
}
.img-rounded{
  border: solid 1px lightgrey;  
}
.align-detail-row{
  margin-top: 20px;
}