<div class="user-details">
  <div class="lawyer-email align-detail-row">
    <%= I18n.t("app.personal_details") %>
    <% if is_different_user? %>
      <%= link_to user_messages_url(@business || @lawyer), class: "btn btn-danger create-claim-btn", remote: true do  %>
        <span class="glyphicon glyphicon-envelope"></span>
        <%= I18n.t("app.message") %>
      <% end %>
    <% end %>
    </div>
  <div class="row align-detail-row">
    <div class="col-md-6 lawyer-email"><%= I18n.t("user.name") %>:</div>
    <div class="col-md-6 lawyer-email">
      <span><%= user.name %></span>
    </div>
  </div>
  <div class="row align-detail-row">
    <div class="col-md-6 lawyer-email"><%= I18n.t("user.email") %>:</div>
    <div class="col-md-6 lawyer-email">
      <span><%= user.email %></span>
    </div>
  </div>
  <div class="row align-detail-row">
    <div class="col-md-6 lawyer-email"><%= I18n.t("user.contact_number") %>:</div>
    <div class="col-md-6 lawyer-email">
      <span><%= user.contact_number %></span>
    </div>
  </div>
  <div class="row align-detail-row">
    <div class="col-md-6 lawyer-email"><%= I18n.t("user.description") %>:</div>
    <div class="col-md-6 lawyer-email">
      <span><%= user.description %></span>
    </div>
  </div>
</div>
<% if @address %>
  <div class="complete-profile-sprtn-line"></div>
  <div class="user-details">
    <div class="lawyer-email align-detail-row"><%= I18n.t("app.address") %></div>
    <div class="row align-detail-row">
      <div class="col-md-6 lawyer-email"><%= I18n.t("address.street") %>:</div>
      <div class="col-md-6 lawyer-email">
        <span><%= @address.name %></span>
      </div>
    </div>

    <div class="row align-detail-row">
      <div class="col-md-6 lawyer-email"><%= I18n.t("address.city") %>:</div>
      <div class="col-md-6 lawyer-email">
        <span><%= @address.city %></span>
      </div>
    </div>

    <div class="row align-detail-row">
      <div class="col-md-6 lawyer-email"><%= I18n.t("address.postal_code") %>:</div>
      <div class="col-md-6 lawyer-email">
        <span><%= @address.postal_code %></span>
      </div>
    </div>

    <div class="row align-detail-row">
      <div class="col-md-6 lawyer-email"><%= I18n.t("address.county") %>:</div>
      <div class="col-md-6 lawyer-email">
        <span><%= @address.county %></span>
      </div>
    </div>
  </div>
<% end %>
