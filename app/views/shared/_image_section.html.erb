<div class="container-fluid">
  <div class="row">
    <div class="hero-image <%= identify_user_cover_pic %>">
      <%= image_tag identify_user_profile_pic, class: "avatar profile-avatar" %>
      <div class="field">
        <%= f.label :profile_image, class: "browse-btn" do %>
          <span class="glyphicon glyphicon-edit browse-icon">
            <span class="text"><%= I18n.t("app.edit_profile_picture") %></span>
          </span>

        <% end %>
        <%= f.file_field  :profile_image, class: "hide" %>

      </div>
    </div>
  </div>
</div>
