<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to root_url, class: "navbar-brand app-name"  do %>
        <%= I18n.t("app.name") %>
      <% end %>
    </div>
    <ul class="nav navbar-nav">
      <li>
        <a href="<%= root_url %>" class = "vl">
          <span class="glyphicon glyphicon-home"><%= I18n.t("app.home") %></span>
        </a>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
      <li>
        <%= link_to root_url do %>
          <%= I18n.t("app.welcome") + " " + current_user.user_name %>
        <% end %>
      </li>
      <% end %>
      <li>
        <%= login_logout_path %>
      </li>
    </ul>
  </div>
</nav>

<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %> text-center flash-msg">
    <%= value %>
  </div>
<% end %>
